<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.dao.adminMapper">
	 <select id="findAdminByUsername" resultType="cn.com.bean.Employee">
		SELECT
		id,
		username,
		name,
		password,
		gender,
		age,
		salary,
		phone,
		email,
		isJob,
		department_id  departmentId
		FROM employee WHERE username=#{username}
	</select>
<!-- 	<insert id="saveUser">
		INSERT INTO user (username,password,email)
		values(#{username},#{password},#{email})
	</insert> -->
	<select id="findAdminByUsernameAndPassword" resultType="cn.com.bean.Employee">
		SELECT  id,
		username,
		name,
		password,
		gender,
		age,
		salary,
		phone,
		email,
		isJob,
		department_id  departmentId
	  From  employee WHERE username=#{username} and password=#{password} and isJob=1
	</select>
	<insert id="insertNews">
	   INSERT INTO news (title,author,create_time createTime,content,category_id categoryId) values(#{title},#{author},now(),#{content},#{categoryId})
	</insert>
